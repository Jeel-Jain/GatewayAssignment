@model SourceControlAssignment1.Models.tbl_user
@{
    ViewBag.Title = "Login";
}




<div class="col-lg-12 col-sm-12">
    <div class="form-div">
        <div class="text-center">
            <h1>Login</h1>
        </div>
        @using (Html.BeginForm("IsValid", "Login", FormMethod.Post))
        {
            <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0  col-xs-12 col-xs-offset-0">
                <div class="form-content">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label>Email Id </label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label>Password</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-12 col-sm-12">
                        <div class="form-group btn-div">
                            <button type="submit" class="btn btn-success btn-lg">Login</button>
                            <a href="@Url.Action("User","User")" class="btn btn-danger btn-lg">Register</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script>

        $(function () {
            var msg ='@TempData["successMesg"]';
            if (msg != '') {

                alertify.alert(msg);
            }
        });
    </script>

}

