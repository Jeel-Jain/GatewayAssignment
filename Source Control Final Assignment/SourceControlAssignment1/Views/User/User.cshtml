@model SourceControlAssignment1.Models.tbl_user

@{
    ViewBag.Title = "User";
}


<style>
    .error {
        color: red
    }
</style>

<div class="form-div">
    <div class="text-center">
        <h1>Registration Form Details</h1>
        <br />
        <br />
    </div>

    @using (Html.BeginForm("Add", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12 col-sm-offset-0  col-xs-12 col-xs-offset-0">
            <div class="form-content">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error" })
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label>Email Id</label>
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label>Password</label>
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error" })
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label>Mobile Number</label>
                        @Html.ValidationMessageFor(x => x.Mobile, "", new { @class = "error" })
                        @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-lg-12 col-sm-12">
                    <div class="form-group btn-div">
                        <button type="submit" class="btn btn-primary btn-lg">Register Me</button>
                    </div>
                </div>
            </div>
        </div>
    }

</div>